<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.popularmovies.Activites.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favorite_movie_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/favorite_movieprogress_bar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:visibility="invisible"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/favorite_movie_no_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_message_favorites"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</FrameLayout>